<?xml version="1.0" encoding="utf-8"?>
<com.fosung.smartliving.views.ZSwipeRefreshLayout android:id="@+id/swipeRefreshLayout"
                                                 xmlns:android="http://schemas.android.com/apk/res/android"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.fosung.smartliving.views.pullrecyclerview.swipemenu.SwipeMenuRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <include
            android:id="@+id/footerView"
            layout="@layout/view_pullrecycler_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>

        <RelativeLayout
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </FrameLayout>
</com.fosung.smartliving.views.ZSwipeRefreshLayout>